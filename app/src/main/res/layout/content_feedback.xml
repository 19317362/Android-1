<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whiteThree">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="65dp"
        android:fontFamily="sans-serif-medium"
        android:text="Let's get started!"
        android:textColor="@color/almostBlackDark"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="38dp"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="38dp"
        android:text="How would you categorize your feedback?"
        android:textColor="@color/almostBlack"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title" />

    <ImageView
        android:id="@+id/positiveFeedbackButton"
        android:contentDescription="Positive feedback button"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="34dp"
        android:src="@drawable/ic_positive_feedback"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/subtitle" />

    <ImageView
        android:id="@+id/negativeFeedbackButton"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:contentDescription="Negative feedback button"
        android:layout_marginStart="211dp"
        android:src="@drawable/ic_positive_feedback"
        app:layout_constraintBottom_toBottomOf="@id/positiveFeedbackButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/positiveFeedbackButton"
        app:layout_constraintTop_toTopOf="@id/positiveFeedbackButton" />

</androidx.constraintlayout.widget.ConstraintLayout>